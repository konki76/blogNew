{% extends 'base.html.twig' %}

{% block body_id 'login' %}

{% block main %}
    {% if error %}
        <div class="alert alert-danger">
            {{ error.messageKey|trans(error.messageData) }}
        </div>
    {% endif %}

    <div class="row">
        <div class="col-sm-5">
            <div class="well">
                <form action="{{ path('fos_user_security_check') }}" method="post">
                    <fieldset>
                        <legend><i class="fa fa-lock"></i> Connexion</legend>
                        <div class="form-group">
                            <label for="username">Pseudo</label>
                            <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control"/>
                        </div>
                        <div class="form-group">
                            <label for="password">Mot de passe:</label>
                            <input type="password" id="password" name="_password" class="form-control" />
                        </div>
                        <button type="submit" class="btn btn-primary">
                            <i class="fa fa-sign-in"></i> Se connecter
                        </button>
                    </fieldset>
                </form>
            </div>
        </div>

		
		
        <div id="login-help" class="col-sm-7">
            <h3>
                Vous n'êtes pas inscrit ?
            </h3>
			<a class="btn btn-primary btn-lg" href="{{ path('fos_user_registration_register') }}">
                        <i class="fa fa-users"></i> S'enregistrer
            </a>
			<h3>
                Vous avez perdu votre mot de passe :
            </h3>
			<a class="btn btn-primary btn-lg" href="{{ path('fos_user_resetting_request') }}">
                        <i class="fa fa-users"></i> Récupérer son mot de passe
            </a>
        </div>


		
    </div>
{% endblock %}
{% block sidebar %}

    {{ parent() }}

{% endblock %}

